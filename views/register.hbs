<div class="container mx-auto row d-flex justify-content-center align-items-center">
  <div class="col">
    <div class="card card-registration my-4 myRegister" style="border: none !important;">
      <div class="row g-0">
        <div class="col-xl-6 d-none d-xl-block rounded">
          <img
            src="https://st2.depositphotos.com/1001599/43046/v/600/depositphotos_430460192-stock-illustration-sign-in-page-abstract-concept.jpg"
            alt="Sample photo" class="img-fluid"
            style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
        </div>
        <div class="col-xl-6 px-md-3 rounded shadow">
          <div class="card-body text-black">
            {{#if regError}}
            <div class="text-center alert alert-danger alert-dismissible fade show" role="alert">
              <strong>Error !</strong>
              {{regError}}.
            </div>
            {{else}}
            <h4 class="mb-3 text-uppercase text-center">Sign Up</h4>
            {{/if}}
            <form novalidate action="/auth/register" method="POST">
              <div class="row">
                <div class="col-md-6 mb-2">
                  <div class="form-outline">
                    <label class="form-label" for="form3Example1m">First name</label>
                    <input value="{{data.firstname}}" name="firstname" type="text" required id="form3Example1m"
                      class="form-control form-control-md" />
                  </div>
                </div>
                <div class="col-md-6 mb-2">
                  <div class="form-outline">
                    <label class="form-label" for="form3Example1n">Last name</label>
                    <input type="text" value="{{data.lastname}}" name="lastname" required id="form3Example1n"
                      class="form-control form-control-md" />
                  </div>
                </div>
              </div>

              <div class="form-outline mb-2">
                <label class="form-label" for="form3Example8">Email</label>
                <input type="email" value="{{data.email}}" name="email" required id="form3Example8"
                  class="form-control form-control-md" />
              </div>
              <div class="form-outline mb-2">
                <label class="form-label" for="form3Example8">Address</label>
                <input type="text" value="{{data.address}}" name="address" required id="form3Example8"
                  class="form-control form-control-md" />
              </div>
              <div class="row">
                <div class="col-md-6 mb-2">
                  <div class="form-outline">
                    <label class="form-label" for="form3Example1m">Phone number</label>
                    <input type="tel" value="{{data.number}}" name="number" required id="form3Example1m"
                      class="form-control form-control-md" />
                  </div>
                </div>
                <div class="col-md-6 mb-2">
                  <div class="form-outline">
                    <label class="form-label" for="form3Example1n">Password</label>
                    <input type="password" value="{{data.password}}" name="password" required id="form3Example1n"
                      class="form-control form-control-md" />
                  </div>
                </div>
              </div>

              <div class="d-md-flex justify-content-start align-items-center mb-2 py-2">

                <h6 class="mb-0 me-4 px-1">Gender: </h6>

                <div class="form-check form-check-inline mb-0 me-4 px-1">
                  <label class="form-check-label mx-1" for="femaleGender">Female</label>
                  <input required class="form-check-input" type="radio" name="gander" id="femaleGender"
                    value="Female" />
                </div>

                <div class="form-check form-check-inline mb-0 me-4 px-1">
                  <label class="form-check-label mx-1" for="maleGender">Male</label>
                  <input class="form-check-input" type="radio" name="gander" id="maleGender" value="Male" />
                </div>

                <div class="form-check form-check-inline mb-0 px-1">
                  <label class="form-check-label mx-1" for="otherGender">Other</label>
                  <input class="form-check-input" type="radio" name="gander" id="otherGender" value="Other" />
                </div>
              </div>

              <div class="form-outline m2-4">
                <label class="form-label" for="form3Example97">Describe yourself</label>
                <textarea name="bio" type="text" id="form3Example97" class="form-control form-control-md"
                  placeholder="Bio ...">{{data.bio}}</textarea>
              </div>

              <div class="d-flex justify-content-end pt-3">
                <p class="small fw-bold mt-2 pt-1 mb-0">Already have an account
                  ?
                  <a href="/auth/login" class="link-danger">Log in</a>
                </p>
                <button type="submit" class="btn btn-primary btn-md ms-2">Sign
                  Up</button>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>